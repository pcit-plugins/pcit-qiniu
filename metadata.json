{
    "$id": "pcit/qiniu",
    "$comment": "https://docs.ci.khs1994.com/usage/",
    "description": "The Qiniu plugin uploads files and build artifacts to your Qiniu bucket.",
    "github": "https://github.com/pcit-plugins/pcit-qiniu",
    "tags": "Storage",
    "author": "PCIT",
    "title": "JSON schema for configuring PCIT CI/CD plugin",
    "$schema": "http://json-schema.org/draft-07/schema",
    "properties": {
        "secret_key": {
            "type": "string",
            "description": "qiniu secret key",
            "default": "1"
        },
        "access_key": {
            "type": "string",
            "description": "qiniu access key",
            "default": "1"
        },
        "bucket": {
            "type": "string",
            "description": "qiniu bucket",
            "default": "1"
        },
        "endpoint": {
            "type": "string",
            "description": "qiniu endpoint",
            "default": "1"
        },
        "files": {
            "type": "object",
            "description": "local_path:qiniu_path"
        }
    },
    "required": [
        "secret_key",
        "access_key",
        "bucket",
        "endpoint",
        "files"
    ]
}
